@page
@using App.Domain.Core.HomeService.RequestEntity.Enum
@using Framework
@using HomeService.Endpoints.RazorPages.Areas.Admin.Pages.Request
@model UpdateModel
@{
    ViewData["Title"] = "دیوارچه > مدیریت درخواست > ویرایش درخواست";

}



<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    درخواست
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
            </div>
            <div class="row">
                <form enctype="multipart/form-data" id="simple-form" role="form" method="post">
                    
                    <input type="hidden" asp-for="Request.Id"/>

                        <div class="form-group">
                            <div class="input-group">
                                <select asp-for="Request.StatusRequest" class="form-select" required>
                                <option value="@StatusRequestEnum.WaitingExpertSelection">@StatusRequestEnum.WaitingExpertSelection.GetEnumDisplayName()</option>
                                <option value="@StatusRequestEnum.ExpertSelection">@StatusRequestEnum.ExpertSelection.GetEnumDisplayName()</option>
                                <option value="@StatusRequestEnum.Started">@StatusRequestEnum.Started.GetEnumDisplayName()</option>
                                <option value="@StatusRequestEnum.WaitingPayment">@StatusRequestEnum.WaitingPayment.GetEnumDisplayName()</option>
                                <option value="@StatusRequestEnum.Paid">@StatusRequestEnum.Paid.GetEnumDisplayName()</option>
                                    
                                </select>
                            </div>
                        </div>
                    
                    <hr>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                        <a asp-page="Index" class="btn btn-warning">
                            بازگشت
                        </a>
                    </div>
                   @*  @if (Model.Result is not null)
                    {
                        <h1 style="align-items:center; background-color:tomato; display:block; font-size:22px; text-align:center; color:white" class="m-3 p-3">@Model.Result</h1>
                    } *@
                </form>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->