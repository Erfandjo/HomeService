@page
@using Framework
@using HomeService.Endpoints.RazorPages.Areas.Admin.Pages.Request
@model IndexModel
@{
    ViewData["Title"] = "دیوارچه > مدیریت سفارشات > لیست سفارشات";
}
<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    سفارشات
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
           
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped" id="data-table">
                        <thead>
                            <tr>
                                
                                <th>شناسه</th>
                                <th>تاریخ انجام</th>
                                <th>ساعت انجام</th>
                                <th>توضیحات</th>
                                <th>شناسه مشتری</th>
                                <th>وضعیت سفارش</th>
                                <th>نام سرویس</th>
                                <th>قیمت</th>
                                <th>زمان ثبت</th>
                                <th>عملیات</th>
                                

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in @Model.Requests)
                            {
                                <tr>

                                    <td>@request.Id</td>

                                   @*  @if (string.IsNullOrEmpty(category.ImagePath))
                                    {
                                        <td><img style="border-radius : 50%" src="\Images\Category\IeKrEgl6K91vwymznimqskAsIGpAxwvPC7rGK005.jpg" width="80" height="80" /></td>
                                    }
                                    else
                                    {
                                        <td><img style="border-radius : 50%" src="@category.ImagePath" width="100" height="100" /></td>
                                    } *@

                                    <td>@request.DateOfCompletion</td>
                                    <td>@request.TimeOfCompletion</td>
                                    <td>@request.Description</td>
                                    <td>@request.CustomerId</td>
                                    <td>@request.Status.GetEnumDisplayName()</td>
                                    <td>@request.ServiceName</td>
                                    <td>@request.Price</td>
                                    <td>@request.RequestAt</td>
                                    
                                    <td>
                                        <a asp-page="Update" asp-route-Id="@request.Id" class="btn btn-info">تغییر وضعیت</a>
                                    </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->
@section Scripts
{
    <script src="~/AdminTemplate/plugins/data-table/js/jquery.dataTables.min.js"></script>
    <script src="~/AdminTemplate/js/pages/datatable.js"></script>
}