@page
@using HomeService.Endpoints.RazorPages.Areas.Admin.Pages.ServiceCategory
@model UpdateModel
@{
    ViewData["Title"] = "دیوارچه > مدیریت دسته بندی > ویرایش دسته بندی";

}


<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    دسته بندی
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
            </div>
            <div class="row">
                <form enctype="multipart/form-data" id="simple-form" role="form" method="post">
                    @if(Model.ServiceCategory.ImagePath is null) 
                    {
                        <img style="border-radius : 50%" src="\Images\Category\IeKrEgl6K91vwymznimqskAsIGpAxwvPC7rGK005.jpg" width="100" height="100" />
                    } else 
                    {
                        <img style="border-radius : 50%" src="@Model.ServiceCategory.ImagePath" width="100" height="100" />
                    }
                    
                    <hr/>
                    <input type="hidden" asp-for="ServiceCategory.Id" />

                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="ServiceCategory.Title" class="form-control" type="text" placeholder="نام" required="وارد کردن این فیلد اجباری است">
                            </div>
                        </div>

                        <div class="form-body">
                            <div class="form-group">
                                <div class="input-group">
                                    <input asp-for="ServiceCategory.Description" class="form-control" type="text" placeholder="توضیحات" required>
                                </div>
                            </div>

                        <div class="form-group">
                            <div class="input-group">
                                <select asp-for="ServiceCategory.SubCategoryId" class="form-select" required>
                                    @foreach (var subCategory in @Model.SubCategories)
                                    {
                                        <option value="@subCategory.Id">@subCategory.Title</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="ServiceCategory.BasePrice" class="form-control" type="number" placeholder="قیمت پایه" required>
                            </div>
                        </div>

                        <div class="form-group relative">
                            <input asp-for="ServiceCategory.ImgFile" type="file" class="form-control">
                            <label>آپلود عکس</label>
                            <div class="input-group round">
                                <input type="text" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-success">
                                        <i class="icon-picture"></i>
                                        آپلود عکس
                                        <div class="paper-ripple">
                                            <div class="paper-ripple__background"></div>
                                            <div class="paper-ripple__waves"></div></div>
                                    </button>
                                </span>
                            </div><!-- /.input-group -->
                            <div class="help-block"></div>
                        </div>

                    </div>
                    <hr>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                        <a asp-page="Index" class="btn btn-warning">
                            بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->