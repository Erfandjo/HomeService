<div class="profile-container">
    <!-- بخش اطلاعات کارشناس -->
    <div class="profile-header">
        <div class="profile-image">

            @if (string.IsNullOrEmpty(Model.Expert.ImagePath))
            {
                <img src="~/Images/Profiles/placeholder.jpg" alt="Profile Picture" class="profile-pic">
            }
            else
            {
                <img src="@Model.Expert.ImagePath" alt="Profile Picture" class="profile-pic">
            }





        </div>
        <div class="profile-info">
            <h2 class="name">@Model.Expert.FirstName @Model.Expert.LastName</h2>
            <p class="specialties">
                تخصص‌ها:
                <span class="skills">
                    @string.Join(", ", Model.Expert.Skils.Select(skill => skill.Title))
                </span>
            </p>

            <div class="rating">
                <span>امتیاز: </span>
                <span class="score">@Model.Expert.Score</span>
                <span> از 5</span>
            </div>
            <p class="biography">بیوگرافی: @Model.Expert.Biography</p>
        </div>
    </div>

    <!-- بخش کامنت‌ها -->
    <div class="comments">
        <h3>نظرات کاربران:</h3>

        @if (Model.Expert.Comments is not null)
        {
            @foreach (var comment in Model.Expert.Comments)
            {


                <div class="comment">
                    <p class="commenter-name">@comment.FullName</p>
                    <p class="comment-text">@comment.Text</p>
                    <p class="service-title"><strong>سرویس مربوطه:</strong>@comment.ServiceName</p>
                    <p class="comment-score"><strong>امتیاز:</strong> @comment.Star از 5</p>
                </div>

            }

        }

        <div class="comment">
            <p>نظری ثبت نشده است</p>
        </div>

    </div>
</div>

