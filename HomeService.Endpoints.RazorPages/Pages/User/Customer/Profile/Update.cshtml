@page
@using App.Domain.Core.HomeService.UserEntity.Enum
@using Framework
@model EditProfileModel
@{

    Layout = "_CustomerProfileLayout";
}


<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    کاربران
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
            </div>
            <div class="row">
                <form enctype="multipart/form-data" id="simple-form" role="form" method="post">
                    <img style="border-radius : 50%" src="@Model.Customer.ImagePath" width="80" height="80" />
                    <hr />
                    <input type="hidden" asp-for="Customer.Id" />

                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Customer.FirstName" class="form-control" type="text" placeholder="نام">
                                <span class="text-danger" asp-validation-for="Customer.FirstName"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Customer.LastName" class="form-control" type="text" placeholder="نام خانوادگی">
                                <span class="text-danger" asp-validation-for="Customer.LastName"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Customer.PhoneNumber" class="form-control" type="text" placeholder="شماره موبایل" />
                                <span class="text-danger" asp-validation-for="Customer.PhoneNumber"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Customer.Email" dir="rtl" class="form-control" type="text" placeholder="آدرس ایمیل" />
                                <span class="text-danger" asp-validation-for="Customer.Email"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Customer.Address" dir="rtl" class="form-control" type="text" placeholder="آدرس" />
                                <span class="text-danger" asp-validation-for="Customer.Email"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Customer.Balance" class="form-control" type="number" placeholder="موجودی" />
                                <span class="text-danger" asp-validation-for="Customer.Balance"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="Customer.UserName" class="form-control" type="text" placeholder="نام کاربری" />
                                <span class="text-danger" asp-validation-for="Customer.UserName"></span>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="input-group">
                                <select asp-for="Customer.CityId" class="form-select">
                                    @foreach (var city in @Model.Cities)
                                    {
                                        <option value="@city.Id">@city.Title</option>
                                    }
                                </select>
                                <span class="text-danger" asp-validation-for="Customer.CityId"></span>
                            </div>
                        </div>


                        <div class="form-group relative">
                            <div class="input-group round">
                                <input asp-for="Customer.ProfileImgFile" type="file" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-success">
                                        <i class="icon-picture"></i>
                                        آپلود عکس
                                        <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                                    </button>
                                </span>
                            </div><!-- /.input-group -->
                            <div class="help-block"></div>
                        </div>


                    </div>
                    <hr>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                        <a asp-page="Index" class="btn btn-warning">
                            بازگشت
                        </a>
                    </div>

                    @if(Model.Results is not null) 
                    {
                        <div class="form-floating mb-5">
                            <h1 style="text-align:center" class="text-danger">@Model.Results.Message</h1>
                        </div>
                    }
                  

                </form>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->